/* pages/auth.wxss */
.form {
  margin: 32rpx;
  overflow: hidden;
  border-radius: 16rpx;
  border: 2rpx solid rgb(249 250 251);
  background-color: white;
  box-shadow: 0 0 6rpx rgba(0, 0, 0, 0.1);
}
.form-title {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  background-color: rgb(249 250 251);
}
.form-group {
  margin-top: 40rpx;
  padding: 16rpx 32rpx;
}
.form-group__title {
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: #9ca3af;
}
.form-group__input {
  padding: 16rpx;
  font-size: 36rpx;
  border-radius: 8rpx;
  border: 2rpx solid #e8e8e8;
}
.form-group__value {
  font-size: 32rpx;
}
.form-group__submit {
  width: 100% !important;
  margin-bottom: 16rpx;
  padding: 20rpx !important;
  font-size: 36rpx;
}
.avatar-btn {
  padding: 0 !important;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx !important;
  height: 150rpx !important;
}
.avatar {
  width: 100%;
  height: 100%;
}